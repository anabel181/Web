@model IEnumerable<lab3.Models.Film>

<div id="searchresults">

    <h3>Все фильмы жанра @Model.First().Genre</h3>
    <table>
        <tr>
            <td><p><b></b></p></td>
            <td><p><b>Название</b></p></td>
            <td><p><b>Режисcер</b></p></td>
            <td><p><b>Жанр</b></p></td>
            <td><p><b>Год</b></p></td>
            <td><p><b>Рейтинг</b></p></td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td><p><img src=@item.Picture width="75" height="150" alt=""></p></td>
                <td><p><b>@item.Name</b></p></td>
                <td><p><b>@item.Producer</b></p></td>
                <td><p><b>@item.Genre</b></p></td>
                <td><p><b>@item.Year</b></p></td>
                <td><p><b>@item.Rating</b></p></td>
            </tr>
        }
    </table>

</div>